    {
      "name": "üé• Meeting Management (Admin)",
      "item": [
        {
          "name": "2.1 Create Meeting",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 201) {",
                  "    const response = pm.response.json();",
                  "    pm.environment.set('meetingId', response.data.id);",
                  "    pm.environment.set('roomCode', response.data.roomCode);",
                  "    console.log('Meeting created:', response.data.id);",
                  "    console.log('Room code:', response.data.roomCode);",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{adminToken}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"hostId\": \"admin123\",\n  \"title\": \"Test WebRTC Meeting\",\n  \"description\": \"Testing WebRTC functionality\",\n  \"type\": \"NORMAL\",\n  \"scheduledStart\": \"2024-01-15T10:00:00Z\",\n  \"scheduledEnd\": \"2024-01-15T11:00:00Z\",\n  \"password\": \"meeting123\",\n  \"isPersistent\": false\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/admin/meetings",
              "host": ["{{baseUrl}}"],
              "path": ["admin", "meetings"]
            }
          }
        },
        {
          "name": "2.2 List Admin Meetings",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{adminToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/admin/meetings?status=SCHEDULED&page=1&limit=10",
              "host": ["{{baseUrl}}"],
              "path": ["admin", "meetings"],
              "query": [
                {
                  "key": "status",
                  "value": "SCHEDULED"
                },
                {
                  "key": "page",
                  "value": "1"
                },
                {
                  "key": "limit",
                  "value": "10"
                }
              ]
            }
          }
        },
        {
