{
  "name": "employee-monitoring-system-phase8",
  "version": "2.0.0",
  "description": "Enhanced Employee Monitoring System with Phase 8: Hardening, Scale & Guardrails",
  "main": "index-phase8.js",
  "scripts": {
    "start": "node index-phase8.js",
    "start:cluster": "NODE_ENV=production node index-phase8.js",
    "start:dev": "NODE_ENV=development node index-phase8.js",
    "start:loadbalancer": "NODE_ENV=production AUTO_SCALING=true node index-phase8.js",
    "test": "npm run test:unit && npm run test:integration && npm run test:e2e",
    "test:unit": "jest --testPathPattern=tests/unit",
    "test:integration": "jest --testPathPattern=tests/integration",
    "test:e2e": "jest --testPathPattern=tests/e2e",
    "test:coverage": "jest --coverage",
    "lint": "eslint . --ext .js,.ts,.jsx,.tsx",
    "lint:fix": "eslint . --ext .js,.ts,.jsx,.tsx --fix",
    "format": "prettier --write .",
    "build": "npm run lint && npm run test",
    "deploy": "npm run build && npm run start:cluster",
    "health": "curl http://localhost:9000/health",
    "metrics": "curl http://localhost:9000/metrics",
    "cache:stats": "curl http://localhost:9000/cache/stats",
    "loadbalancer:status": "curl http://localhost:9000/loadbalancer/status",
    "loadbalancer:stats": "curl http://localhost:9000/loadbalancer/stats",
    "monitor": "node -e \"const pm = require('./service/performanceMonitor'); pm.startMonitoring(10000); setInterval(() => console.log(JSON.stringify(pm.getPerformanceReport(), null, 2)), 10000);\"",
    "cache:clear": "node -e \"const cache = require('./service/cacheService'); cache.clear().then(() => console.log('Cache cleared')).catch(console.error);\"",
    "db:optimize": "node -e \"const { optimizedPrisma } = require('./config/optimizedPrismaConfig'); optimizedPrisma.optimizeConnection().then(() => console.log('Database optimized')).catch(console.error);\"",
    "phase8:test": "node test-phase8.js"
  },
  "keywords": [
    "employee-monitoring",
    "webrtc",
    "meetings",
    "performance",
    "scaling",
    "security",
    "caching",
    "load-balancing",
    "monitoring",
    "enterprise"
  ],
